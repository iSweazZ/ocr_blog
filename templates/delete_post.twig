{% extends 'layout.twig' %}

{% block title %}Suppression de l'article{% endblock %}

{% block content %}
    <section class="banner offset-next-element" style="background-image: url('/ressources/images/posts/{{ post.image }}');">
        <div class="wrapper">
            <div class="title">
                <h1>Suppression de l'article</h1>
            </div>
        </div>
        <img class="vector-shape vector-shape-bottom" src="/ressources/images/vectors/vector-bottom-right-white.svg" alt="">
    </section>
    <section class="delete-post position-relative">
        <div class="wrapper">
            <div class="page management">
                <h2 class="title">Souhaitez-vous vraiment supprimer l'article ?</h2>
                <div class="single">
                    <div class="post icon-spacing">
                        <div class="header">
                            <h3 class="title"><i class="fas fa-newspaper"></i>{{ post.title }}</h3>
                            {% if session.role == 'Admin' %}
                                <div class="actions icon-spacing white">
                                    <a class="hide" href="/article/{{ post.identifier }}"><i class="fas fa-eye"></i>Voir</a>
                                </div>
                            {% endif %}
                        </div>
                        <div class="description formated">{{ post.content | raw }}</div>
                        <div class="infos">
                            <h3><i class="fas fa-user"></i>{{ post.username }}</h3>
                            <p><i class="fas fa-calendar"></i>{{ post.creationDate }}</p>
                        </div>
                    </div>
                </div>
                <form action="/article/suppression/{{ post.identifier }}" method="post">
                    <input class="button-form button-dark-pink" type="submit" value="Supprimer" />
                </form>
            </div>
        </div>
        <img class="vector-shape vector-shape-bottom z-index-negative-1" src="/ressources/images/vectors/vector-bottom-right-dark-grey.svg" alt="">
    </section>
{% endblock %}