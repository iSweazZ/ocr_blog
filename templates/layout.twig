<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width,initial-scale=1.0,minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="description" content="BADI Wissem, développeur d'application Symfony/React en formation chez OpenClassrooms : site vitrine, e-commerce, intégration, programmation, informatique, application web, responsive...">
    <meta property="og:title" content="BADI Wissem" />
    <meta property="og:description" content="Développeur d'application Symfony/React" />
    <meta property="og:url" content="https://google.com/" />
    <meta property="og:image" content="/ressources/images/monokai/monokai-1.jpg" />
    <link href="/ressources/css/main.css" type="text/css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="/ressources/images/favicon.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Flow+Rounded&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Flow+Circular&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/3297382b62.js" crossorigin="anonymous"></script>
    <title>{% block title %}Portfolio{% endblock %} | BADI Wissem</title>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-TESYE1FEEC"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-TESYE1FEEC');
    </script>
</head>
<body>
    {% include 'partials/navbar.twig' %}
    <div id="frame">
        {% block content %}{% endblock %}
        {% include 'partials/footer.twig' %}
    </div>
    {% include 'partials/top_page.twig' %}
    <div id="mobile-menu" class="menu mobile-only">
        <a type="button" class="close-menu"><i class="fas fa-times"></i></a>
        <ul class="navigation-links">
            {% if session.is_authenticated == true %}
                <li style="color: var(--clr-grey)">Bonjour <span style="font-weight: 600;">{{ session.username }}</span> !</li>
            {% endif %}
            <li><a class="button-tertiary button-white" href="/articles">Articles</a></li>
            <li><a class="button-tertiary button-white" href="/contact">Contact</a></li>
        </ul>
        {% if session.is_authenticated != true %}
            <ul class="navigation-user">
                <li><a class="button-secondary button-white" href="/inscription"><i class="fas fa-user-plus"></i>S'enregistrer</a></li>
                <li><a class="button-primary button-white" href="/connexion"><i class="fas fa-sign-in-alt"></i>Se connecter</a></li>
            </ul>
        {% else %}
            <ul class="navigation-user">
                <li><a class="button-primary button-white" href="/deconnexion"><i class="fas fa-sign-out-alt"></i>Se déconnecter</a></li>
            </ul>
        {% endif %}
    </div>
    <script src="/ressources/js/_locomotive-scroll.js"></script>
    <script src="/ressources/js/main.js" type="module"></script>
</body>
</html>